
@model List<AttendenceManagementSystem.ViewModel.DateWiseAttendanceListVM>
@{
    ViewData["Title"] = "DateWiseAttendanceList";
}

<div class="container">
    <div class="container-fluid" style="padding-top:60px;padding-bottom:60px;position:relative;">
        <h2 class="text-center">Attendance List Acording To Date</h2>
        <div class="card" style="width:100%;height:100%;margin-left: 50%;transform: translateX(-50%);">
            <div class="card-body">
                <h5>CLass : @ViewBag.StudentName.FirstName &nbsp; @ViewBag.StudentName.LastName</h5>
                <h5>CLass : @ViewBag.ClassName.Classname</h5>
                <h5>Subject : @ViewBag.CourseName.CourseName</h5>               
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Date</th>
                            <th>Time</th>
                            <th>Status</th>
                            <th>Edit Attendance</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.DateVM.ToString("dd-MM-yyyy")</td>
                                <td>@item.TimeVM</td>
                                <td>@item.StatusVM</td>
                                <td><a asp-controller="Attendance" asp-action="EditAttendance" 
                                       class="btn btn-outline-secondary"
                                       asp-route-stuid="@ViewBag.StudentName.Id" asp-route-classid="@ViewBag.ClassName.Id"
                                       asp-route-crseid="@ViewBag.CourseName.Id" asp-route-date="@item.DateVM"
                                       asp-route-time="@item.TimeVM">
                                    @item.EditStatusVM</a></td>
                            </tr>
                        }
                        </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

