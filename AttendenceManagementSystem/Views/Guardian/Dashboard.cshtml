
@{
    ViewData["Title"] = "Dashboard";
}
@model List<AttendenceManagementSystem.ViewModel.GdStuListVM>

@Html.Partial("_GuardianDashboard")

<div class="container">
    <div class="container-fluid" style="padding-top:60px;padding-bottom:60px;position:relative;">
        <h2 class="text-center">My Profile</h2>
        <div class="card" style="margin-left: 50%;transform: translateX(-50%);width:80%;">
            <div class="card-body">
                <div class="row">
                    <div class="col-6" style="border-right:2px solid">
                        <i class="fas fa-user fa-8x"></i>
                        <h5>Id : @ViewBag.GdnInfo.id</h5>
                        <h5>Name : @ViewBag.GdnInfo.FirstName &nbsp; @ViewBag.GdnInfo.LastName</h5>
                        <h5>Phone : @ViewBag.GdnInfo.Phone</h5>
                        <h5>Email : @ViewBag.GdnInfo.Email</h5>
                    </div>
                    <div class="col-6">
                        @*<i class="fas fa-book-open fa-7x"></i>*@
                        <h5 style="border-bottom:2px solid">Student List:</h5>
                        <table class="table table-bordered">
                            <thead>
                                <tr>
                                    <th>Student Name</th>
                                    <th>Class</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.StudentName</td>
                                        <td>@item.ClassName</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>