
@{
    ViewData["Title"] = "StudentInfo";
}
@model  List<AttendenceManagementSystem.ViewModel.GuardianInfoVM>

@Html.Partial("_FacultyDashboard")

<div class="container">
    <div class="container-fluid" style="padding-top:60px;padding-bottom:60px;position:relative;">
        <h1 class="text-center">Profile</h1>
        <div class="card" style="width:80%;margin-left: 50%;transform: translateX(-50%);">
            <div class="card-body">
                <div class="row">
                    <div class="col-6" style="border-right:2px solid">
                        <h5 style="border-bottom:2px solid">Student:</h5>
                        <i class="fas fa-user fa-8x"></i>
                        <h5>Id : @ViewBag.stuInfo.Id</h5>
                        <h5>Name :@ViewBag.stuInfo.FirstName &nbsp; @ViewBag.stuInfo.LastName</h5>                       
                    </div>
                    <div class="col-6">
                        <h5 style="border-bottom:2px solid">Guardian:</h5>
                        <i class="fas fa-user fa-8x"></i>
                        @foreach (var item in Model)
                        {
                            <h5>Id : @item.GidVM</h5>
                            <h5>Name : @item.GNameVM</h5>
                            <h5>Phone : @item.GPhoneVM</h5>
                            <h5>Email : @item.GMailVM</h5>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

