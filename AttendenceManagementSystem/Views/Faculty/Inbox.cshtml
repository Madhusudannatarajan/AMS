
@{
    ViewData["Title"] = "Inbox";
}

@Html.Partial("_FacultyDashboard")

    <div class="container">
        <div class="container-fluid" style="padding-top:60px;padding-bottom:60px;position:relative;">
            <h2 class="text-center">Inbox Message</h2>
            <div class="card" style="margin-left:50%;transform: translateX(-50%);width:100%;">
                <div class="card-body">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>Title</th>
                                <th>Date</th>
                                <th>Time</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>

                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.MTitle</td>
                                    <td>@item.MDate</td>
                                    <td>@item.MTime</td>
                                    <td><a asp-controller="Faculty" asp-action="InboxReadMessage" class="btn text-light bg-dark" asp-route-MessageId="@item.MId">Read</a></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
